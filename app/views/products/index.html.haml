# encoding: utf-8
= render :partial => "shared/top_menu"
= render :partial => "shared/messages"

%h1.section-title#title
  Продукты

%p
  = link_to 'Добавить продукт', new_product_path

%table#index
  %tr
    %th Наименование
    %th Размер, мм
    %th Бонус
    %th Бонус для сайта
    %th Цена
    %th Операции

  - @products.each do |product|
    %tr
      %td= link_to product.name, edit_product_path(product)
      %td
        =product.size_width
        x
        =product.size_height
      %td= product.bonus_product.name if product.bonus_product
      %td= product.bonus_site
      %td= product.price
      %td= link_to 'Удалить', product, :confirm => 'Вы уверены?', :method => :delete

%p
  = link_to 'Добавить продукт', new_product_path

