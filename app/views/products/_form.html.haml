= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :size_width
    = f.text_field :size_width
  .field
    = f.label :size_height
    = f.text_field :size_height
  .field
    = f.label :bonus_product_id
    = f.number_field :bonus_product_id
  .field
    = f.label :bonus_site
    = f.text_field :bonus_site
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
