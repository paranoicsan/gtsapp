= form_for @product, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :size_width, :class => 'control-label'
    .controls
      = f.text_field :size_width, :class => 'text_field'
  .control-group
    = f.label :size_height, :class => 'control-label'
    .controls
      = f.text_field :size_height, :class => 'text_field'
  .control-group
    = f.label :bonus_product_id, :class => 'control-label'
    .controls
      = f.number_field :bonus_product_id, :class => 'number_field'
  .control-group
    = f.label :bonus_site, :class => 'control-label'
    .controls
      = f.text_field :bonus_site, :class => 'text_field'
  .control-group
    = f.label :price, :class => 'control-label'
    .controls
      = f.text_field :price, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), products_path, :class => 'btn'
