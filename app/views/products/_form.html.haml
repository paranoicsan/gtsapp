= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "Возникшие ошибки:"
      %ul
        -@product.errors.messages.each do |errs|
          -errs.each do |e|
            -if e.is_a?(Array)
              %li
                =e[0]

  .field
    = f.label :name, 'Наименование'
    = f.text_field :name
  .field
    = f.label :size_width, 'Ширина, мм'
    = f.text_field :size_width
  .field
    = f.label :size_height, 'Высота, мм'
    = f.text_field :size_height
  .field
    = f.label :bonus_product_id, 'Бонусный продукт'
    = f.number_field :bonus_product_id
  .field
    = f.label :bonus_site, 'Бонус для сайта'
    = f.text_field :bonus_site
  .field
    = f.label :price, 'Стоимость'
    = f.text_field :price
  .actions
    = f.submit 'Сохранить'
