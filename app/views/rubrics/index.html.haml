- model_class = Rubric
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:old_id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:social)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @rubrics.each do |rubric|
      %tr
        %td= link_to rubric.id, rubric_path(rubric)
        %td= rubric.old_id
        %td= rubric.name
        %td= rubric.social
        %td=l rubric.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_rubric_path(rubric), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), rubric_path(rubric), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_rubric_path, :class => 'btn btn-primary'
