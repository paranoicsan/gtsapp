= form_for @rubric do |f|
  -if @rubric.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rubric.errors.count, "error")} prohibited this rubric from being saved:"
      %ul
        - @rubric.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :old_id
    = f.number_field :old_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :social
    = f.check_box :social
  .actions
    = f.submit 'Save'
