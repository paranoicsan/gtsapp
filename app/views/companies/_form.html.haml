= form_for @company do |f|
  -if @company.errors.any?
    #error_explanation
      %h2= "#{pluralize(@company.errors.count, "error")} prohibited this company from being saved:"
      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :date_added
    = f.date_select :date_added
  .field
    -#= f.label :rubricator
    -#= f.check_box  :rubricator, {  }
    Социальный
    = check_box_tag "user[role_ids][]", 1, true if (@company.rubricator = 1) || (@company.rubricator = 3)
    Коммерческий
    = check_box_tag "user[role_ids][]", 2, true if (@company.rubricator = 2) || (@company.rubricator = 3)
  .actions
    = f.submit 'Создать'
