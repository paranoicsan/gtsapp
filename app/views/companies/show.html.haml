- model_class = Company
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @company.title
%p
  %strong= model_class.human_attribute_name(:date_added) + ':'
  %br
  = @company.date_added
%p
  %strong= model_class.human_attribute_name(:rubricator) + ':'
  %br
  = @company.rubricator
%p
  %strong= model_class.human_attribute_name(:company_status_id) + ':'
  %br
  = @company.company_status_id
%p
  %strong= model_class.human_attribute_name(:author_user_id) + ':'
  %br
  = @company.author_user_id
%p
  %strong= model_class.human_attribute_name(:editor_user_id) + ':'
  %br
  = @company.editor_user_id
%p
  %strong= model_class.human_attribute_name(:company_source_id) + ':'
  %br
  = @company.company_source_id
%p
  %strong= model_class.human_attribute_name(:agent_id) + ':'
  %br
  = @company.agent_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), companies_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_company_path(@company), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), company_path(@company), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
