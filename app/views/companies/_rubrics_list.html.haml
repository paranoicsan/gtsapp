
-if @company.rubrics.count > 0
  %table#rubrics.table.table-striped.table-condensed
    %tr
      %th Наименование
      %th Социальная?
      %th
    -@company.rubrics.each do |rub|
      %tr
        %td= rub.name
        %td= check_box_tag("social", 1, rub.social?, { :disabled => "disabled" })
        %td
          = link_to company_delete_rubric_path(@company, rub), :method => :delete, :confirm => 'Вы уверены?',
          title: 'Удалить', class: 'btn btn-mini' do
            =glyph(:remove)

