- model_class = City
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @city.name
%p
  %strong= model_class.human_attribute_name(:phone_code) + ':'
  %br
  = @city.phone_code
%p
  %strong= model_class.human_attribute_name(:old_id) + ':'
  %br
  = @city.old_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), cities_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_city_path(@city), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), city_path(@city), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
