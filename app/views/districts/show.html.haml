- model_class = District
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @district.name
%p
  %strong= model_class.human_attribute_name(:old_id) + ':'
  %br
  = @district.old_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), districts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_district_path(@district), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), district_path(@district), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
