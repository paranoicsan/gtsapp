!!! 5
%html
  %head
    %title ГТС. Управление каталогом компаний
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    #container
      #header ГТС. Управление каталогом компаний
      #body
        #message
          - if flash[:notice]
            #notice
              = flash[:notice]
          - if flash[:error]
            #warning
              Ошибка:
              %br
              - if flash[:error].is_a?(Array)
                - flash[:error].each do |msg|
                  = msg
              - else
                = flash[:error]

        = yield

      #footer
        #footer_inner_left Сообщить об ошибке
        #footer_inner_right gtsapp v0.1

