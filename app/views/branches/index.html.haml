- model_class = Branch
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:form_type_id)
      %th= model_class.human_attribute_name(:fact_name)
      %th= model_class.human_attribute_name(:legel_name)
      %th= model_class.human_attribute_name(:company_id)
      %th= model_class.human_attribute_name(:comments)
      %th= model_class.human_attribute_name(:is_main)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @branches.each do |branch|
      %tr
        %td= link_to branch.id, branch_path(branch)
        %td= branch.form_type_id
        %td= branch.fact_name
        %td= branch.legel_name
        %td= branch.company_id
        %td= branch.comments
        %td= branch.is_main
        %td=l branch.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_branch_path(branch), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), branch_path(branch), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_branch_path, :class => 'btn btn-primary'
