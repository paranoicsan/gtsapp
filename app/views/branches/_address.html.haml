-if @branch.address
  %table.table.table-condensed.table-borderless
    %tbody
      %tr
        %td=@branch.address.full_address
        %td
          .btn-group
            = link_to edit_address_path(@branch.address), class: 'btn btn-mini', title: 'Изменить' do
              =glyph(:edit)
            = link_to @branch.address, :method => :delete, :confirm => 'Удалить запись?', title: 'Удалить',
            class: 'btn btn-mini', :rel => "nofollow" do
              =glyph(:remove)
-else
  = link_to new_branch_address_path(@branch), class: 'btn btn-small' do
    =glyph(:plus)
    Добавить адрес