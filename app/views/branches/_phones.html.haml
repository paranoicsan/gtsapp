%p
  =link_to new_branch_phone_path(@branch), class: 'btn btn-mini', id: 'phone_add' do
    =glyph(:plus)
    Добавить

-if @branch.phones.any?
  %table.table.table-striped.table-condensed{id: 'phones'}
    %tbody
      %tr
        %th
        %th В печать?
        %th Описание
        %th
        %th
      -@branch.phones_by_order.each do |phone|
        %tr
          %td= phone.order_num.to_s
          %td= check_box_tag("cb_publishable", 1, phone.publishable?, { :disabled => "disabled" })
          %td= phone.description
          %td= link_to phone.name, phone_path(phone)
          %td
            .btn-group
              = link_to edit_phone_path(phone), class: 'btn btn-mini', title: 'Изменить', id: "phone_edit" do
                =glyph(:edit)
              = link_to phone, :method => :delete, :confirm => 'Удалить запись?', title: 'Удалить',
              class: 'btn btn-mini', :rel => "nofollow" do
                =glyph(:remove)
