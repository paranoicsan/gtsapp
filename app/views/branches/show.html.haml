- model_class = Branch
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:form_type_id) + ':'
  %br
  = @branch.form_type_id
%p
  %strong= model_class.human_attribute_name(:fact_name) + ':'
  %br
  = @branch.fact_name
%p
  %strong= model_class.human_attribute_name(:legel_name) + ':'
  %br
  = @branch.legel_name
%p
  %strong= model_class.human_attribute_name(:company_id) + ':'
  %br
  = @branch.company_id
%p
  %strong= model_class.human_attribute_name(:comments) + ':'
  %br
  = @branch.comments
%p
  %strong= model_class.human_attribute_name(:is_main) + ':'
  %br
  = @branch.is_main

.form-actions
  -if @branch.company
    = link_to t('.back', :default => t("helpers.links.back")), company_path(@branch.company), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_branch_path(@branch), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), branch_path(@branch), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
