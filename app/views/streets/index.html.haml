- model_class = Street
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:old_id)
      %th= model_class.human_attribute_name(:city_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @streets.each do |street|
      %tr
        %td= link_to street.id, street_path(street)
        %td= street.name
        %td= street.old_id
        %td= street.city_id
        %td=l street.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_street_path(street), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), street_path(street), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_street_path, :class => 'btn btn-primary'
