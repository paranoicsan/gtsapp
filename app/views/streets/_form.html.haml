= form_for @street do |f|
  -if @street.errors.any?
    #error_explanation
      %h2= "#{pluralize(@street.errors.count, "error")} prohibited this street from being saved:"
      %ul
        - @street.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :old_id
    = f.number_field :old_id
  .field
    = f.label :city_id
    = f.number_field :city_id
  .actions
    = f.submit 'Save'
