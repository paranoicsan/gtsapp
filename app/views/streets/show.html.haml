- model_class = Street
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @street.name
%p
  %strong= model_class.human_attribute_name(:old_id) + ':'
  %br
  = @street.old_id
%p
  %strong= model_class.human_attribute_name(:city_id) + ':'
  %br
  = @street.city_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), streets_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_street_path(@street), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), street_path(@street), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
