-if @report_result
  .row-fluid
    .span10
      .well
        %h4
          = "Компании по улице #{@report_result[:street].name} (#{@report_result[:street].city.name})"
        %br
        -if @report_result[:companies].any?
          %table#report_results_table.table.table-striped
            %tr
              %th Компания
              %th Информация
            -@report_result[:companies].each do |rr|
              %tr
                %td
                  =link_to rr.title, company_path(rr)
                  %p
                    ="#{rr.main_branch.fact_name}, #{rr.main_branch.legel_name}"
                %td
                  %ul
                    %li
                      ="#{rr.main_branch.fact_name}, #{rr.main_branch.legel_name}, #{rr.main_branch.address.full_address}"
                    -rr.branches_sorted.each do |b|
                      -unless b.is_main
                        %li
                          ="#{b.fact_name}, #{b.legel_name}, #{b.address.full_address}"
          -else
          %p
            Компаний не найдено