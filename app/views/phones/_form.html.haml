= form_for ([@branch, @phone]),:html => { :class => 'well form-horizontal' } do |f|
  -if @phone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phone.errors.count, "error")} prohibited this phone from being saved:"
      %ul
        - @phone.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :publishable, 'В печать', :class => 'control-label'
    .controls
      = f.check_box :publishable
  .control-group
    = f.label :mobile, 'Мобильный', :class => 'control-label'
    .controls
      = f.check_box :mobile
  .control-group{id:'phone_mobile_refix_group'}
    = f.label :mobile_refix, 'Префикс мобильного оператора', :class => 'control-label'
    .controls
      = f.text_field :mobile_refix
      %p#phone_mobile_refix_help.help-inline
        3 цифры
  .control-group{id:'phone_name_group'}
    = f.label :name, '№ телефона', :class => 'control-label'
    .controls
      = f.text_field :name
      %p#phone_name_help.help-inline
        5-7 цифр
  .control-group
    = f.label :description, 'Описание', :class => 'control-label'
    .controls
      = f.text_field :description
  .control-group
    = f.label :fax, 'Факс', :class => 'control-label'
    .controls
      = f.check_box :fax
  .control-group
    = f.label :order_num, 'Порядок отображения', :class => 'control-label'
    .controls
      -order_num = @phone.order_num.nil? ? @phone.next_num_order(@branch.id) : @phone.order_num
      = f.number_field :order_num, :value => order_num, :class => 'span2'

  .form-actions
    = f.submit 'Сохранить', :class => 'btn btn-primary', :id => 'btn_phone_save'
    -s = @phone.id ? branch_path(@phone.branch) : branch_path(@branch)
    = link_to 'Отмена', s, :class => 'btn'
