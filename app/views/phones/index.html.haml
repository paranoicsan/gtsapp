- model_class = Phone
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:mobile_refix)
      %th= model_class.human_attribute_name(:publishable)
      %th= model_class.human_attribute_name(:fax)
      %th= model_class.human_attribute_name(:director)
      %th= model_class.human_attribute_name(:mobile)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:contact)
      %th= model_class.human_attribute_name(:order_num)
      %th= model_class.human_attribute_name(:branch_id)
      %th= model_class.human_attribute_name(:old_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @phones.each do |phone|
      %tr
        %td= link_to phone.id, phone_path(phone)
        %td= phone.mobile_refix
        %td= phone.publishable
        %td= phone.fax
        %td= phone.director
        %td= phone.mobile
        %td= phone.description
        %td= phone.name
        %td= phone.contact
        %td= phone.order_num
        %td= phone.branch_id
        %td= phone.old_id
        %td=l phone.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_phone_path(phone), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), phone_path(phone), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_phone_path, :class => 'btn btn-primary'
