= form_for @project_code, :html => { :class => 'form-horizontal' } do |f|
  -if @project_code.errors.any?
    #error_explanation
      %h2= "Возникшие ошибки:"
      %ul
        -@project_code.errors.messages.each do |errs|
          -errs.each do |e|
            -if e.is_a?(Array)
              %li
                =e[0]

  .control-group
    = f.label :name, 'Наименование', :class => 'control-label'
    .controls
      = f.text_field :name

  .form-actions
    = f.submit 'Сохранить', :class => 'btn btn-primary', :id => 'project_code_save'
    =link_to 'Отмена', project_codes_path, class: 'btn'