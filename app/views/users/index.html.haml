.page-header
  %h1
    Пользователи
    %p
      %small Зарегистрированные в системе

.container
  .row
    .span10

      = render :partial => "shared/messages"

      %p
        = link_to new_user_path, :class => 'btn' do
          =glyph(:plus)
          Добавить

      %table.table.table-striped.table-bordered
        %tbody
          %tr
            %th Имя пользователя
            %th Электронная почта
            %th Роли
            %th Операции
          - @users.each do |user|
            %tr
              %td= user.username
              %td= user.email
              %td= user.roles.map { |role| role.to_s }.join(", ")
              %td
                = link_to edit_user_path(user), class: 'btn btn-mini', title: 'Изменить' do
                  =glyph(:edit)
                -unless current_user.eql?(user)
                  = link_to user_path(user), :method => :delete, :confirm => 'Are you sure?', title: 'Удалить', class: 'btn btn-mini' do
                    =glyph(:remove)

