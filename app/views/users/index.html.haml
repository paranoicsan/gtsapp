# encoding: utf-8
= render  :partial => "shared/messages"
= render :partial => "shared/top_menu"

%h1.section-title#title
  Пользователи

%p
  = link_to "Создать пользователя", new_user_path

%table#index
  %thead
    %tr
      %th Имя пользователя
      %th Электронная почта
      %th Роли
      %th Операции
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.roles.map { |role| role.to_s }.join(", ")
        %td
          -#= link_to "Изменить", edit_user_path(user)
          = link_to "Удалить", user_path(user), :method => :delete, :confirm => 'Are you sure?'

%p
  = link_to "Создать пользователя", new_user_path
