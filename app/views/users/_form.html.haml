= form_for @user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :username, :class => 'control-label'
    .controls
      = f.text_field :username, :class => 'text_field'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field'
  .control-group
    = f.label :crypted_password, :class => 'control-label'
    .controls
      = f.text_field :crypted_password, :class => 'text_field'
  .control-group
    = f.label :password_salt, :class => 'control-label'
    .controls
      = f.text_field :password_salt, :class => 'text_field'
  .control-group
    = f.label :persistence_token, :class => 'control-label'
    .controls
      = f.text_field :persistence_token, :class => 'text_field'
  .control-group
    = f.label :roles, :class => 'control-label'
    .controls
      = f.text_field :roles, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn'
