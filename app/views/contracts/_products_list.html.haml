-if @contract.products.any?
  %table#products.table.table-striped.table-condensed
    %tr
      %th Наименование
      %th Рубрика
      %th
    -@contract.products.each do |p|
      %tr
        %td
          = link_to p.product_type.name, product_path(p), id: 'contract_product_view'
        %td= p.rubric.name if p.rubric
        %td
          =link_to edit_product_path(p), :class => "btn btn-mini", :id => 'contract_product_edit', title: 'Изменить' do
            =glyph(:edit)
          =link_to product_path(p), :class => "btn btn-mini", "data-confirm" => "Вы уверены?", :id => 'contract_product_edit',
          title: 'Удалить' do
            =glyph(:remove)
