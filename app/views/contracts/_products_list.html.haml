-if @contract.products.any?
  %table#products.table.table-striped.table-condensed
    %tr
      %th Наименование
      %th Рубрика
      %th
    -@contract.products.each do |p|
      %tr
        %td
          = link_to p.product_type.name, product_path(p), id: 'contract_product_view'
        %td= p.rubric.name if p.rubric
        %td
          %a{ :href => edit_product_path(p), :class => "btn btn-mini", :id => 'contract_product_edit'}
            %i.icon-edit.icon-white
            Изменить

          %a.btn.btn-mini{"href" => product_path(p), "data-confirm" => "Вы уверены?",
          :id => 'contract_product_delete', "data-method" => "delete"}
            %i.icon-trash.icon-white
            Удалить