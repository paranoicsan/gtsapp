- model_class = Contract
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:contract_status_id) + ':'
  %br
  = @contract.contract_status_id
%p
  %strong= model_class.human_attribute_name(:project_code_id) + ':'
  %br
  = @contract.project_code_id
%p
  %strong= model_class.human_attribute_name(:date_sign) + ':'
  %br
  = @contract.date_sign
%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @contract.number
%p
  %strong= model_class.human_attribute_name(:amount) + ':'
  %br
  = @contract.amount
%p
  %strong= model_class.human_attribute_name(:bonus) + ':'
  %br
  = @contract.bonus
%p
  %strong= model_class.human_attribute_name(:company_legel_name) + ':'
  %br
  = @contract.company_legel_name
%p
  %strong= model_class.human_attribute_name(:person) + ':'
  %br
  = @contract.person
%p
  %strong= model_class.human_attribute_name(:company_details) + ':'
  %br
  = @contract.company_details
%p
  %strong= model_class.human_attribute_name(:number_of_dicts) + ':'
  %br
  = @contract.number_of_dicts
%p
  %strong= model_class.human_attribute_name(:company_id) + ':'
  %br
  = @contract.company_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), contracts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_contract_path(@contract), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), contract_path(@contract), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
