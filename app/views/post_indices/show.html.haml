- model_class = PostIndex
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:code) + ':'
  %br
  = @post_index.code
%p
  %strong= model_class.human_attribute_name(:old_id) + ':'
  %br
  = @post_index.old_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), post_indices_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_index_path(@post_index), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), post_index_path(@post_index), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
