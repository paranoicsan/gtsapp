= form_for @post_index, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :code, :class => 'control-label'
    .controls
      = f.number_field :code, :class => 'number_field'
  .control-group
    = f.label :old_id, :class => 'control-label'
    .controls
      = f.number_field :old_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), post_indices_path, :class => 'btn'
