# encoding: utf-8
= render :partial => "shared/messages"
= render :partial => "shared/top_menu"

%h1.section-title#title
  Сводка

#suspend_box
  %table
    %tr
      %td
        %h2#dashboard_title Компании на рассмотрении
        %table#suspended_companies_list.sub-index
          %tr
            %th Название
            %th Добавлена
            %th Операции
          - if @suspended_companies
            - @suspended_companies.each do |company|
              %tr
                %td= link_to company.title, company_path(company)
                %td
                  = company.date_added.strftime("%d.%m.%Y")
                  = company.author_name
                %td
                  -if current_user.is_admin? || current_user.is_operator?
                    = link_to "Активировать", activate_company_path(company)

        = will_paginate @suspended_companies
      %td
        -if current_user.is_admin?
          %h2#dashboard_title Договора на рассмотрении
          %table#suspended_contracts_list.sub-index
            %tr
              %th Номер
              %th Компания
              %th
            - if @suspended_contracts
              - @suspended_contracts.each do |contract|
                %tr
                  %td= contract.number
                  %td= contract.company.title
                  %td= link_to 'Активировать', activate_contract_path(contract)