# encoding: utf-8
= render :partial => "shared/messages"

.page-header
  %h1
    Поиск

.container-fluid
  .row-fluid
    .span8
      = form_tag search_company_path, {:remote => true, :method => :post, :class => 'form-horizontal well'}   do
        #s_name.control-group
          = label_tag 'Название:', nil, :class => 'control-label'
          .controls
            = text_field_tag "search_name", "", :placeholder => "прямое, фактическое или юридическое", :size => 70
        #s_email.control-group
          = label_tag 'Email:', nil, :class => 'control-label'
          .controls
            = text_field_tag "search_email", "", :placeholder => "test@test.com", :size => 70
        #s_address
          #s_address_city.control-group
            = label_tag 'Город:', nil, :class => 'control-label'
            .controls
              = select_tag("select_search_city", options_for_select(City.all.collect{ |s| [s.name, s.id] }),
                {:prompt => "Выберите город или населённый пункт", :id => "select_search_city"})
          -##s_address_district.control-group
          -#  = label_tag 'Район:', nil, :class => 'control-label'
          -#  .controls
          -#    = select_tag("select_search_district", options_for_select(District.all.collect{ |s| [s.name, s.id] }),
          -#      {:prompt => "Выберите район", :id => "select_search_district"})
          #s_address_street.control-group
            = label_tag 'Улица:', nil, :class => 'control-label'
            .controls
              = select_tag("select_search_street", options_for_select(Street.name_with_city.collect{ |s| [s[:name], s[:id]] }),
                {:prompt => "Выберите улицу", :id => "select_search_street"})
          #s_address_house.control-group
            = label_tag 'Номер дома:', nil, :class => 'control-label'
            .controls
              = text_field_tag "search_house", "", :placeholder => "точное соответствие"
          #s_address_office.control-group
            = label_tag 'Номер офиса:', nil, :class => 'control-label'
            .controls
              = text_field_tag "search_office", "", :placeholder => "точное соответствие"
          #s_address_cabinet.control-group
            = label_tag 'Номер кабинета:', nil, :class => 'control-label'
            .controls
              = text_field_tag "search_cabinet", "", :placeholder => "точное соответствие"
        #s_phone.control-group
          = label_tag 'Телефон:', nil, :class => 'control-label'
          .controls
            = text_field_tag "search_phone", "", :placeholder => "введите первые цифры номера"
        #s_controls.form-actions
          = submit_tag "Искать", {:id => "do_search", :class => 'btn'}

  .row-fluid
    .span10
      #search_results
        = render :partial => "search_results"